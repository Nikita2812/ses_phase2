# CSA AIaaS Platform - Environment Configuration
# Sprint 1: The Neuro-Skeleton
#
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/<your-project-id>/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# PostgreSQL Connection String (for Phase 2 Sprint 2 - raw SQL queries)
# Get from: Supabase Dashboard → Project Settings → Database → Connection String
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres


# =============================================================================
# LLM API KEY (OpenRouter)
# =============================================================================
# OpenRouter API Key (required)
# Get from: https://openrouter.ai/settings/keys
# Sign up at: https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# OpenRouter Model (optional - default: nvidia/nemotron-3-nano-30b-a3b:free)
# This is a FREE model on OpenRouter - no costs incurred
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Debug mode (set to False in production)
DEBUG=True

# Maximum iterations for LangGraph workflow
MAX_ITERATIONS=10

# Risk assessment thresholds (0.0 - 1.0)
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4


# =============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Server host and port
# HOST=0.0.0.0
# PORT=8000

# Log level
# LOG_LEVEL=INFO
